<%- include('partials/layout', { title: 'Add Achievement', user: (typeof user !== 'undefined' ? user : null) }) %>
<section>
  <h1>Add Achievement</h1>
  <% if (error) { %>
    <div class="error"><%= error %></div>
  <% } %>
  <form method="post" action="<%= basePath %>/achievements/add">
    <label>Title
      <input type="text" name="title" required />
    </label>
    <label>Category
      <input type="text" name="category" required />
    </label>
    <label>Metric (e.g., km, reps)
      <input type="text" name="metric" required />
    </label>
    <label>Amount
      <input type="number" step="0.01" name="amount" required />
    </label>
    <label>Notes
      <textarea name="notes" rows="3"></textarea>
    </label>
    <button type="submit">Save</button>
  </form>
</section>
<%- include('partials/footer') %>
