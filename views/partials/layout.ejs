      </nav>
      <div class="auth">
      <% if (user) { %>
        <span>Signed in as <%= user.username %></span>
        <form method="post" action="<%= (typeof basePath !== 'undefined' ? basePath : '') %>/logout" style="display:inline">
          <button type="submit">Logout</button>
        </form>
      <% } else { %>
        <a href="<%= (typeof basePath !== 'undefined' ? basePath : '') %>/register">Register</a>
        <a href="<%= (typeof basePath !== 'undefined' ? basePath : '') %>/login">Login</a>
      <% } %>
      </div>
    </div>
